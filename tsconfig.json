{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2015",
    "allowJs": true,
    "paths": {
      "~*": [
        "./*"
      ],
      "$types": ["helper/types.ts"],
      "$store": ["helper/store.ts"],
      "$utils": ["helper/utils.ts"],
      "$api": ["helper/api.ts"],
      "$lib/*": ["helper/lib/*"],
      "$components/*": ["components/*"],
    },
    "baseUrl": "."
  }
}
